{
  "name": "Messenger",
  "author": "Alexandre Rivest",
  "version": "1.0.0",
  "description": "A native desktop wrapper for Messenger.com.",
  "main": "out/index.js",
  "scripts": {
    "clean": "rm -rf out dist",
    "bundle:preload": "node scripts/bundle-preload.js",
    "start": "bun run bundle:preload && tsc && electron .",
    "dev": "bun run bundle:preload && concurrently \"tsc -w\" \"electron .\"",
    "test": "jest",
    "test:e2e": "bun run bundle:preload && tsc && playwright test",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "bun run clean && bun run bundle:preload && tsc && electron-builder",
    "build:win": "bun run clean && bun run bundle:preload && tsc && electron-builder --win --x64",
    "tsc": "tsc --noEmit"
  },
  "build": {
    "appId": "com.arivest.messenger-desktop",
    "files": [
      "out/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "assets/icon.icns",
      "identity": null,
      "target": [
        "zip",
        "dir"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^2.6.1",
    "playwright": "^1.40.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.50.0"
  },
  "private": true,
  "dependencies": {
    "electron-store": "^8.1.0",
    "v8-compile-cache": "^2.4.0"
  }
}
