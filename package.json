{
  "name": "Messenger",
  "version": "1.0.0",
  "description": "",
  "main": "out/index.js",
  "scripts": {
    "start": "tsc && electron .",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "build": "tsc && electron-builder",
    "build:win": "tsc && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.messenger.desktop",
    "files": [
      "out/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "assets/icon.png",
      "identity": null,
      "target": [
        "zip",
        "dir"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^5.5.3"
  },
  "private": true,
  "dependencies": {
    "v8-compile-cache": "^2.4.0"
  }
}
